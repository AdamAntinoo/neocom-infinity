    "files.autoSaveWorkspaceFilesOnly": true,
    "formatOnSave": true,
    "editor.wordWrapColumn": 150,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications"
}
