<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="be9a6a22-f747-4956-96c9-5e89b4bbc38e" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Z1.Post Deploy Check</name>
  <description>Check that the deployment completed successfully.</description>
  <settings>
    <parameters />
    <build-runners>
      <runner id="Check_Kuberneted_deployed_versions" name="Check Kubernetes deployed versions" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[NODE_ENV=staging
export NAMESPACE=neocom-$NODE_ENV
export ENV=$NODE_ENV
echo "##teamcity[setParameter name='_NEOCOM.NAMESPACE' value='$NAMESPACE']"
kubectl -n %_NEOCOM.NAMESPACE% get pods --output=wide``
kubectl -n %_NEOCOM.NAMESPACE% get pods --show-labels=true]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="NeocomInfinity_HttpsGithubComAdamAntinooNeocomInfinityGitRefsHeadsMaster" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_3" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:&lt;default&gt;" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <dependencies>
      <depend-on sourceBuildTypeId="NeocomInfinity_D1DeployNib">
        <options>
          <option name="run-build-if-dependency-failed-to-start" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="NeocomInfinity_D2DeployNin">
        <options>
          <option name="run-build-if-dependency-failed-to-start" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="NeocomInfinity_D3DeployNif">
        <options>
          <option name="run-build-if-dependency-failed-to-start" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

