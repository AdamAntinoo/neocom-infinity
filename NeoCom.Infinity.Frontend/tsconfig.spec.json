{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["app/modules/shared/interfaces/*"],
      "@models/*": ["app/modules/shared/models/*"],
      "@renders/*": ["app/modules/shared/renders/*"],
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
