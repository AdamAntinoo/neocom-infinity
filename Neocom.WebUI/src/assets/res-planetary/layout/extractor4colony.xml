<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/uipanelborderblue">

        <include layout="@layout/nodebase4list" />

        <org.dimensinfin.android.mvc.fonts.Din1451BoldTextView
            android:id="@+id/structureType"
            style="@style/AppTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nodeIcon"
            android:text="Basic Industry Facility"
            android:textSize="14sp"
            android:textStyle="bold" />

        <org.dimensinfin.android.mvc.fonts.Din1451TextView
            android:id="@+id/headsCounter"
            style="@style/AppTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/uirighttextmargin"
            android:gravity="right"
            android:text="4 heads"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/productBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/structureType"
            android:layout_toRightOf="@+id/nodeIcon"
            android:background="@drawable/uipanelbordergreen">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/defaulticonplaceholder" />

            <TextView
                android:id="@+id/productName"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productImage"
                android:text="Precious Metals"
                android:textSize="12sp"
                android:textStyle="bold" />

            <org.dimensinfin.android.mvc.fonts.MonsOlympiaTextView
                android:id="@+id/quantityPerCycle"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productName"
                android:layout_toRightOf="@id/productImage"
                android:gravity="right"
                android:text="9.123 units/cycle"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cycleBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headsCounter"
            android:layout_toRightOf="@id/productBlock"
            android:background="@drawable/uipanelborderred">

            <TextView
                android:id="@+id/cycleTime"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cyce timing: 3200/7200 seconds"
                android:textSize="10sp" />

            <ProgressBar
                android:id="@+id/cycleProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/cycleTime"
                android:backgroundTint="@color/uipanelborder"
                android:max="100"
                android:min="0"
                android:progress="35"
                android:progressTint="@color/appblue" />

            <TextView
                android:id="@+id/timeToComplete"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cycleProgress"
                android:text="1d 13 hours 23 min 48 secs"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/timeToCompleteLabel"
            style="@style/AppTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_toRightOf="@+id/nodeIcon"
            android:text="Time to Complete run:"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>
