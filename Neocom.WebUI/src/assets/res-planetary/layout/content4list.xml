<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/nodebase4list" />

    <TextView
        android:id="@+id/contentName"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nodeIcon"
        android:text="Oxidizing Compound"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contentAmount"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nodeIcon"
        android:gravity="right"
        android:text="3.200 units"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contentVolumeLabel"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantityPerCycle"
        android:layout_below="@+id/contentName"
        android:layout_toRightOf="@+id/nodeIcon"
        android:text="Volume:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/contentValueLabel"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cycleTime"
        android:layout_below="@+id/contentVolumeLabel"
        android:layout_toRightOf="@+id/nodeIcon"
        android:text="Market Value:"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/quantityPerCycle"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contentAmount"
        android:layout_toRightOf="@+id/nodeIcon"
        android:gravity="right"
        android:text="1.200 m3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cycleTime"
        style="@style/AppTheme.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/quantityPerCycle"
        android:layout_toRightOf="@+id/nodeIcon"
        android:gravity="right"
        android:text="34.856 isk"
        android:textSize="12sp" />
</RelativeLayout>
